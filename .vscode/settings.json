{
    "python.unitTest.pyTestArgs": [
        "${workspaceRoot}/python/"
    ],
    "python.unitTest.pyTestEnabled": true,
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": [
        "--config=${workspaceRoot}/python/config/pep8.conf"
    ],
    "python.linting.pylintArgs": [
        "--rcfile=${workspaceRoot}/python/config/pylint.conf"
    ],
    "python.formatting.autopep8Args": [
        "--global-config=${workspaceRoot}/python/config/pep8.conf"
    ],
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/doc/html": true
    },
    "python.pythonPath": "C:\\Python35\\python.exe"
}